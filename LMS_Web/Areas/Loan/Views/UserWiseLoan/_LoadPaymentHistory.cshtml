@model IEnumerable<LMS_Web.Areas.Loan.Models.LoanPaymentHistory>

@{
    Layout = null;
    ViewData["Title"] = "User Wise  Loan List";
    int row = 1;
}
@{
    var lastYM = ViewBag.YearMonth;
}
<div class="table-responsive">
    <table class="table table-striped table-borderless custrom-table mb-2" id="table">
        <thead>
            <tr>
                <th>#</th>                
                <th>Loan Head</th>
                <th>Loan Amount</th>
                <th>Installment before paid</th>
                <th>Paid Amount</th>
                <th>Payment Date</th>
                <th>Pay Order No</th>                          
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                //var url = "/loanfile/" + item.Document;
                <tr>
                    <td>@(row++)</td>
                    <td>@item.UserWiseLoan.LoanHeads.Name</td>                
                    <td>@item.UserWiseLoan.LoanAmount</td>
                    <td>@item.InstallmentNoBeforePaid</td>
                    <td>@item.PaidAmount</td>
                    <td>@item.PaymentDate.ToString("MM/dd/yyyy")</td>
                    <td>@item.BankNo</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script>
     $(document).ready(function () {        
        $('#table').DataTable();
    });
</script>
