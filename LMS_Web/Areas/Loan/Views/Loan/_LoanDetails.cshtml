@using LMS_Web.Models;
@{
    ViewData["Title"] = "Loan Details";
    int row = 1;
}

<div class="bg-light mt-4 p-3">
    <div class="text-center">
        <h1 class="display-5 mt-4 mb-4 p-2">@ViewData["Title"] </h1>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-borderless custrom-table mb-2" id="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Year</th>
                    <th>Month</th>
                    <th>Installment Type</th>
                    <th>Installment No</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@(row++)</td>
                        <td>@item.Year</td>
                        <td>@(GetMonthName.GetFullName(item.Month))</td>
                        <td>@(item.IsCapital ? "Capital" : "Interest") </td>
                        <td>@(item.IsCapital ? item.CapitalInstallmentNo : item.InterestInstallmentNo)</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>