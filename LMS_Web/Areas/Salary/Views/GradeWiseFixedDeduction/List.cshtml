@model IEnumerable<LMS_Web.Areas.Settings.Models.GradeWiseFixedDeduction>

@{
    ViewData["Title"] = "Grade Wise Fixed Deduction List";
    Layout = "~/Areas/Salary/Views/Shared/_Layout.cshtml";
    int row = 1;
}
<div class="bg-light mt-4 p-3">
    <div class="text-center">
        <h1 class="display-5 mt-4 mb-4 p-2">@ViewData["Title"] </h1>
    </div>
    <div id="MessageDiv" style="text-align: center;">
        <label style="color:green"><span id="SuccessMessageDiv">@ViewBag.Success</span></label>
        <label style="color:red"><span id="ErrorMessageDiv" style="color: red">@ViewBag.Error</span></label>
    </div>
    <a asp-action="Add" class="btn btn-primary mt-3 mb-3"><i class="fas fa-plus-circle"></i> Add GradeWise FixedDeduction</a>

    <div class="table-responsive">
        <table class="table table-striped table-borderless custrom-table mb-2" id="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Deduction</th>
                    <th>From Grade</th>
                    <th>To Grade</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@(row++)</td>
                        <td>@item.Deduction.Name</td>
                        <td>@item.FromGrade?.Name</td>
                        <td>@item.ToGrade?.Name </td>
                        <td>@item.Amount</td>

                        <td>
                            <a asp-action="Add" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#Deduction").css("display", "block");
            $('#table').DataTable();
        });

    </script>
}