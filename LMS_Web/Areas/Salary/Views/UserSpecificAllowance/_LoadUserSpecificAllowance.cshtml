@{
    ViewData["Title"] = "User Specific Allowance List";
    int row = 1;
}
@{
    bool isFound = ViewBag.IsFound;
}
@if (isFound == false)
{
    <div id="MessageDiv" style="text-align: center;">
        <label style="color:red"><span id="ErrorMessageDiv" style="color: red">There is no allowance</span></label>
    </div>
}
else
{
    <div class="bg-light mt-4 p-3" id="userSpecificAllowanceView">
        <div class="table-responsive">
            <table class="table table-striped table-borderless custrom-table mb-2" id="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User</th>
                        <th>Specific Allowance</th>
                        <th>Amount</th>
                        <th>Month</th>
                        <th>Year</th>

                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(row++)</td>
                            <td>@item.AppUser.FullName</td>
                            <td>@item.PayScale.Name</td>
                            <td>@item.Amount</td>
                            <td>@(new DateTime(2000, @item.Month, 10).ToString("MMMM"))</td>
                            <td>@item.Year</td>
                            <td>
                                <a asp-action="Add" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

}
<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>
