@model IEnumerable<LMS_Web.Areas.Salary.Models.Bonus>

@{
    ViewData["Title"] = "Religion Specific Bonus List";
    int row = 1;
}
<div class="bg-light mt-4 p-3">
    <div class="text-center">
        <h1 class="display-5 mt-4 mb-4 p-2">@ViewData["Title"] </h1>
    </div>
    <div id="MessageDiv" style="text-align: center;">
        <label style="color:green"><span id="SuccessMessageDiv">@ViewBag.SuccessMessage</span></label>
        <label style="color:red"><span id="ErrorMessageDiv" style="color: red">@ViewBag.ErrorMessage</span></label>
        <label style="color:red"><span id="DeleteMessageDiv" style="color: red">@ViewBag.DeleteMessage</span></label>
    </div>
    <a asp-action="CreateBonus" class="btn btn-primary mt-3 mb-3"><i class="fas fa-plus-circle"></i> Add Religion Bonus</a>
    <div class="table-responsive">
        <table class="table table-striped table-borderless custrom-table mb-2" id="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Percent</th>
                    <th>Religion</th>
                    <th>ReportText</th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(row++)</td>
                        <td>@item.Name</td>
                        <td>@item.Percent</td>
                        <td>@item.Religion</td>
                        <td>@item.ReportText</td>

                        <td>
                            <a asp-action="CreateBonus" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>||
                            <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are You Sure you want to Delete bonus?')"><i class="fa fa-trash"></i></a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script>
        $(document).ready(function () {
            $("#Bonus").css("display", "block");
            $('#table').DataTable();
           
        });
    </script>
}

