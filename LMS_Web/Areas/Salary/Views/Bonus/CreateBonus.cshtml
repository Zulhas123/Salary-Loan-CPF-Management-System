@model LMS_Web.Areas.Salary.Models.Bonus

@{
    ViewData["Title"] = "CreateBonus";
}
@Html.AntiForgeryToken()
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-6">
        <form method="post" asp-action="CreateBonus" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4">
                <h1 class="h5 mb-3 font-weight-bold card-header border">Religion Specific Bonus Add</h1>
            </div>
            <input type="hidden" id="id" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <span class="text-danger">*</span>
                <input id="Name" type="text" required="required" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Percent" class="control-label"></label>
                 <span class="text-danger">*</span>
                <input id="Percent" type="text" required="required" asp-for="Percent" class="form-control" />
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="d-flex align-items-center justify-content-between">
                    <label asp-for="Religion"></label>
                    <span class="text-danger">*</span>
                    <span asp-validation-for="Religion" class="text-danger small text-error ml-auto"></span>
                </div>
                <select asp-for="Religion" class="form-control" tabindex="11" required="required">
                    <option value="">Select Religion</option>
                    <option value="All">সকল</option>
                    <option value="ইসলাম">ইসলাম</option>
                    <option value="হিন্দু">হিন্দু</option>
                    <option value="খ্রিস্টান">খ্রিস্টান</option>
                    <option value="বৌদ্ধ">বৌদ্ধ</option>
                    <option value="উপজাতি">উপজাতি</option>
                    <option value="অন্যান্য">অন্যান্য</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ReportText" class="control-label"></label>
                <span class="text-danger">*</span>
                <input id="ReportText" type="text" required="required" asp-for="ReportText" class="form-control" />
                <span asp-validation-for="ReportText" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 text-center">
                <a class="btn btn-secondary" asp-action="List">List</a>
                <input type="submit" name="btnValue" id="submitBtn" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#Bonus").css("display", "block");
            var id = $("#id").val();
            if (id != 0) {
                $("#submitBtn").val("Update");
                $("#AppUserId").prop("disabled", true);
            }
        });
    </script>
}