@model IEnumerable<LMS_Web.Areas.CPF.Models.PRlApplicantInfo>

@{
    ViewData["Title"] = "PRL User Info";
    int row = 1;
}
<div class="bg-light mt-4 p-3">
    <div class="text-center mb-4 card m-2">
        <h1 class="display-5 mt-4 mb-4 p-2">@ViewData["Title"] </h1>
    </div>
    <div id="MessageDiv" style="text-align: center;">
        @*<label style="color:green"><span id="SuccessMessageDiv">@ViewBag.Success</span></label>*@
        <label style="font-size:xx-large; color:darkgreen"><span id="SuccessMessageDiv" style="color: darkgreen">@ViewBag.Success</span></label>
        <label style="color:red"><span id="ErrorMessageDiv" style="color: red">@ViewBag.Error</span></label>
    </div>
    <a asp-action="Application" class="btn btn-primary mt-3 mb-3"><i class="fas fa-plus-circle"></i> Apply for PRL (CPF)</a>
    <div class="table-responsive">
        <table class="table table-striped table-borderless custrom-table mb-2" id="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>User Name</th>
                    <th>Application Date</th>
                    <th>PRL Date</th>
                    <th>IsApproved</th>
                    <th>Approved Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@(row++)</td>
                        <td>@item.AppUser.FullName</td>
                        <td>@item.ApplicationDate</td>
                        <td>@item.PrlDate</td>
                        <td>@item.IsApproved</td>
                        <td>@item.ApproveDate</td>
                        <td>
                            <a asp-action="Application" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#CPF").css("display", "block");
            $('#table').DataTable();
        });

        function ApproveModal(id) {
            $("#aloanId").val(id);
            $("#approveModal").modal("show")
        }

    </script>
}



