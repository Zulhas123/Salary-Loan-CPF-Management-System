@model LMS_Web.Areas.CPF.Models.FiscalYearWiseInvestmentInfo;
@{
    ViewData["Title"] = "FiscalYear Investment";
}
@Html.AntiForgeryToken()
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-6">
        <form method="post" asp-action="AddFiscalYearInvest" enctype="multipart/form-data" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4 card">
                <h1 class="h5 mb-3 font-weight-bold card-header border">Add Previous Interest</h1>
            </div>
            <input type="hidden" id="id" asp-for="Id" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">User</label>
                        <span class="text-danger">*</span>

                        @Html.DropDownList("AppUserId", new SelectList(ViewBag.users, "Value", "Text"), "Select User", new { @class = "form-control", @required = "required" })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Investment Amount</label>
                        <input asp-for="InvestmentAmount" class="form-control" required type="number" step="any" />
                    </div>

                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Fiscal Year</label>
                        @Html.DropDownList("fiscalYear", new SelectList(ViewBag.FiscalYear, "Id", "Value"), "Select Fiscal Year", new { @class = "form-control", @required = "required" })
                    </div>

                    <div class="form-group">
                        <label class="control-label">Interest Amount</label>
                        <input asp-for="InterestAmount" class="form-control" required type="number" step="any"/>
                    </div>
                </div>
            </div>

            <div class="form-group mt-4 text-center">
                <a class="btn btn-secondary" asp-action="List">List</a>
                <input type="submit" name="btnValue" id="submitBtn" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#SetupMenu").css("display", "block");
            var id = $("#id").val();
            if (id != 0) {
                $("#submitBtn").val("Update");
            }
             $(function () {
                $("#AppUserId").select2();
            });
        });

    </script>
}
