@{
    ViewData["Title"] = "Self Fiscal Year Report";
}
@Html.AntiForgeryToken()
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-6">
        <form method="post" asp-action="UserWiseFiscalCpfReport" enctype="multipart/form-data" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4 card">
                <h1 class="h5 mb-3 font-weight-bold card-header border">Self Fiscal Year Report</h1>
            </div>
            @*<input type="hidden" id="id" asp-for="Id" class="form-control" />*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row border">               
                <div class="col-12 border">                  
                    <div class="form-group">
                        <label class="control-label">Fiscal Year</label>
                        @Html.DropDownList("fiscalYearId", new SelectList(ViewBag.FiscalYear, "Id", "Value"), "Select Fiscal Year", new { @class = "form-control", @required = "required" })
                    </div>
                </div>
            </div>

            <div class="form-group mt-4 text-center">
                <input type="submit" name="btnValue" id="submitBtn" formtarget="_blank" value="Print" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#Report").css("display", "block");        
        });

    </script>
}


