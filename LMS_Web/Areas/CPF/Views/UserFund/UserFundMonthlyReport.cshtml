@{
    ViewData["Title"] = "User Fund Report";
    Layout = "~/Areas/CPF/Views/Shared/_Layout.cshtml";
}

@Html.AntiForgeryToken()
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-8">
        <form method="post" asp-action="UserFundMonthlyReport" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4">
                <h1 class="h5 mb-3 font-weight-bold card-header border"> Monthly User Fund Report</h1>
            </div>
            <div class="row">
                <div class="col-md-6 border">
                    <div class="form-group">
                        <label class="control-label">Station</label>
                        <span class="text-danger">*</span>
                        @Html.DropDownList("StationId", new SelectList(ViewBag.Stations, "Id", "Name"), "Select Station", new { @class = "form-control",@required="required"})
                    </div>
                    <div class="form-group">
                        <label class="control-label">From Grade</label>
                        @Html.DropDownList("FromGradeId", new SelectList(ViewBag.Grade, "Id", "Name"), "Select From Grade", new { @class = "form-control"})

                    </div>

                    <div class="form-group">
                        <label class="control-label">From Month</label>
                        <select name="fMonth" class="form-control" tabindex="10" required="required" id="fMonth">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">To Month</label>
                        <select name="tMonth" class="form-control" tabindex="10" required="required" id="tMonth">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 border">
                    <div class="form-group">
                        <label class="control-label">Wings</label>
                        @Html.DropDownList("WingId", new SelectList(ViewBag.Wings, "Id", "Name"), "Select Wings", new { @class = "form-control"})
                    </div>

                    <div class="form-group">
                        <label class="control-label">To Grade</label>
                        @Html.DropDownList("ToGradeId", new SelectList(ViewBag.Grade, "Id", "Name"), "Select From Grade", new { @class = "form-control"})

                    </div>


                    <div class="form-group">
                        <label class="control-label">From Year</label>

                        <select id="ddlfYears" name="fYear" required="required" class="form-control"></select>
                        <span class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">To Year</label>

                        <select id="ddltYears" name="tYear" required="required" class="form-control"></select>
                        <span class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group mt-4 text-center">
                <input type="submit" name="btnValue" id="submitBtn" formtarget="_blank" value="Print" class="btn btn-primary form-control" />
            </div>
        </form>
    </div>
</div>
@section scripts
    {
    <script>
        $(document).ready(function () {
            $("#Report").css("display", "block");
            var date = new Date();
            var year = date.getFullYear();
            var month = date.getMonth() + 1;
            $("#fMonth").val(month);
            $("#tMonth").val(month);
            var currentYear = date.getFullYear() + 10;
            var ddlfYears = document.getElementById("ddlfYears");
            var ddltYears = document.getElementById("ddltYears");

            for (var i = 2022; i <= currentYear; i++) {
                var option = document.createElement("OPTION");
                option.innerHTML = i;
                option.value = i;
                 if (i == year) {
                    option.setAttribute("selected", year);
                }
                ddlfYears.appendChild(option);

            }
            for (var i = 2022; i <= currentYear; i++) {
                var option = document.createElement("OPTION");
                option.innerHTML = i;
                option.value = i;
                if (i == year) {
                    option.setAttribute("selected", year);
                }
                ddltYears.appendChild(option);

            }
        });

    </script>
}