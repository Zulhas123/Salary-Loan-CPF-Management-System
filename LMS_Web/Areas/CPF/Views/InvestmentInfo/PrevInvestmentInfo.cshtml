@model LMS_Web.Areas.CPF.Models.InvestmentInfo;
@{
    ViewData["Title"] = "PrevInvestmentInfo";
}
@Html.AntiForgeryToken()
<div class="row justify-content-center mt-4 mb-2">
    <div class="col-md-8">
        <form method="post" asp-action="PrevInvestmentInfo" enctype="multipart/form-data" class="form-signin create-form bg-white rounded border shadow-sm p-4">
            <div class="text-center mb-4 card">
                <h1 class="h5 mb-3 font-weight-bold">Previous Investment Info  </h1>
            </div>
            <input type="hidden" id="id" asp-for="Id" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row justify-content-between">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">User</label>
                        <span class="text-danger">*</span>
                        @Html.DropDownList("AppUserId", new SelectList(ViewBag.users, "Id", "FullName"), "Select User", new { @class = "form-control", @required = "required" })

                    </div>
             
                    <div class="form-group">
                        <label class="control-label">Previous TotalInvestment</label>
                        <input id="" type="number" asp-for="TotalInvestment" required class="form-control" />
                        <span asp-validation-for="TotalInvestment" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4 text-center">
                        <a class="btn btn-secondary form-control" asp-action="List">List</a>                       
                    </div>

                </div>
                <div class="col-md-6">
                    
                    <div class="form-group">
                    <label class="control-label">Start Month</label>
                    <select asp-for="Month" class="form-control" tabindex="10">
                    <option value="1">January</option>
                    <option value="2">February</option>
                    <option value="3">March</option>
                    <option value="4">April</option>
                    <option value="5">May</option>
                    <option value="6">June</option>
                    <option value="7">July</option>
                    <option value="8">August</option>
                    <option value="9">September</option>
                    <option value="10">October</option>
                    <option value="11">November</option>
                    <option value="12">December</option>
                    </select>
                    </div>
                    <div class="form-group">
                    <label class="control-label">Start Year</label>
                    <select id="ddlYears" asp-for="Year" class="form-control"></select>
                    </div>                                       
                    <div class="form-group mt-4 text-center">
                        <input type="submit" name="btnValue" id="submitBtn" value="Save" class="btn btn-primary form-control" />
                    </div>

                </div>
            </div>

        </form>
    </div>
</div>
@section Scripts
    {
    <script>
        $(document).ready(function () {
            $("#Interest").css("display", "block");
            var id = $("#id").valInvestment
            if (id != 0) {
                $("#submitBtn").val("Update");
            }
            $(function () {
                $("#AppUserId").select2();
            });
            var currentYear = (new Date()).getFullYear() + 12;
            var ddlYears = document.getElementById("ddlYears");

            for (var i = 2010; i <= currentYear; i++) {
                var option = document.createElement("OPTION");
                option.innerHTML = i;
                option.value = i;
                ddlYears.appendChild(option);
            }
        });

    </script>
}
