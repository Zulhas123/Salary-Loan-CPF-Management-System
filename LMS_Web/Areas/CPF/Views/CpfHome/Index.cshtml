@model LMS_Web.Areas.CPF.ViewModels.CpfDeductionVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/CPF/Views/Shared/_Layout.cshtml";
}
@if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
{
    @Html.AntiForgeryToken()
    <div class="text-center">
        <h1 class="display-5 mt-4 mb-4 p-2">ড্যাশবোর্ড</h1>
        <div class="row justify-content-center mb-4 pl-5 pr-5">
            <div class="col-lg-3">
                <div class="card custom-card card-stretch gutter-b wave wave-animate-slow wave-success p-0 mb-4">
                    <div class="card-body">
                        <div class="align-items-center">
                            <div class="text-center">
                                <div class="text-dark-75 mb-5">মোট CPF ব্যবহারকারী</div>
                                <a asp-controller="CpfInfo" asp-action="List" target="_blank" class="font-weight-bold font-size-h4 d-inline-block mb-3">0</a>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card custom-card card-stretch gutter-b wave wave-animate-slow wave-success p-0 mb-4">
                    <div class="card-body">
                        <div class="align-items-center">
                            <div class="text-center">
                                <div class="text-dark-75 mb-5">মোট বিনিয়োগ</div>
                                <a asp-controller="InvestmentInfo" asp-action="List" target="_blank" class="font-weight-bold font-size-h4 d-inline-block mb-3">0</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card custom-card card-stretch gutter-b wave wave-animate-slow wave-success p-0 mb-4">
                    <div class="card-body">
                        <div class="align-items-center">
                            <div class="text-center">
                                <div class="text-dark-75 mb-4">মোট অর্থবছরের বিনিয়োগ</div>
                                <a asp-controller="FiscalYearWiseInvest" asp-action="List" target="_blank" class="font-weight-bold font-size-h4 d-inline-block mb-3">0</a>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-5 mt-4 mb-4 p-2">ড্যাশবোর্ড</h1>
        <div class="row justify-content-center mb-4 pl-5 pr-5">
            <div class="col-lg-3">
                <div class="card custom-card card-stretch gutter-b wave wave-animate-slow wave-success p-0 mb-4">
                    <div class="card-body">
                        <div class="align-items-center">
                            <div class="text-center">
                                <a href="http://www.bjri.gov.bd/site/view/notices" class="font-weight-bold font-size-h4 d-inline-block mb-3">নোটিশ</a>
                                <div class="text-dark-75"><a href="http://www.bjri.gov.bd/site/view/notices" target="_blank">বাংলাদেশ পাট গবেষণা ইনস্টিটিউট (বিজেআরআই)</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card custom-card card-stretch gutter-b wave wave-animate-slow wave-success p-0 mb-4">
                    <div class="card-body">
                        <div class="align-items-center">
                            <div class="text-center">
                                <a href="http://www.bjri.gov.bd/" target="_blank" class="font-weight-bold font-size-h4 d-inline-block mb-3">বিস্তারিত</a>
                                <div class="text-dark-75 mb-4"><a href="http://www.bjri.gov.bd/" target="_blank">বাংলাদেশ পাট গবেষণা ইনস্টিটিউট (বিজেআরআই)</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section scripts
    {
    <script>
        $("#Dashboard").css("display", "block");
    </script>
}
